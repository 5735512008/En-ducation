<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nam.en_ducation.EngEn4b"
    android:background="@drawable/bgqq">


    <RelativeLayout
               android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_question"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/img_answer"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/img_answer"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/btn_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_question"
            android:background="@color/boards_color"
            android:text="Choose answer" />

        <ImageView
            android:id="@+id/img_answer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/btn_answer"
            android:layout_centerHorizontal="true"
            android:src="@drawable/num" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="จับคู่สี"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />
</RelativeLayout>
