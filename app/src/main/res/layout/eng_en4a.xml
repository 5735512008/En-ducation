<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EngEn4a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EngEn4a"
    android:background="@drawable/bgqq">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@+id/score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="เลือกคำตอบให้ตรงกับสีที่ให้มา"
            android:textColorLink="@android:color/holo_green_dark"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignLeft="@+id/choose1"
            android:layout_alignStart="@+id/choose1"
            android:layout_below="@+id/textView4"
            android:layout_weight="2.93"
            app:srcCompat="@drawable/quest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/choose1"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/choose3"
                android:layout_alignStart="@+id/choose3"
                android:layout_below="@+id/choose3"

                android:layout_weight="0.53"
                android:background="@drawable/buttom9"
                android:text=""
                android:textSize="24dp" />

            <Button
                android:id="@+id/choose2"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/choose2"
                android:layout_alignLeft="@+id/choose2"
                android:layout_alignStart="@+id/choose2"

                android:layout_weight="0.32"
                android:background="@drawable/buttom9"
                android:text=""
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/choose3"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:layout_alignLeft="@+id/choose3"
                android:layout_alignStart="@+id/choose3"
                android:layout_below="@+id/choose3"

                android:layout_weight="0.53"
                android:background="@drawable/buttom9"
                android:text=""
                android:textSize="24dp" />

            <Button
                android:id="@+id/choose4"
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/choose2"
                android:layout_alignLeft="@+id/choose2"
                android:layout_alignStart="@+id/choose2"

                android:layout_weight="0.27"
                android:background="@drawable/buttom9"
                android:text=""
                android:textSize="24dp" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score(0 /10)"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
