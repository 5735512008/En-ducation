<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nam.en_ducation.Game3cActivity"
    android:background="@drawable/bgqq">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drop2"
        android:src="@drawable/drop4a"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/drag2"
        android:layout_toStartOf="@+id/drag2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drop4"
        android:src="@drawable/drop4b"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/drop2"
        android:layout_toEndOf="@+id/drop2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drop3"
        android:src="@drawable/dropans2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/drag2"
        android:layout_toEndOf="@+id/drag2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView17"
        android:src="@drawable/pic04"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drag1"
        android:src="@drawable/droptrue4"
        android:layout_above="@+id/imageView18"
        android:layout_alignLeft="@+id/imageView18"
        android:layout_alignStart="@+id/imageView18" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drag2"
        android:src="@drawable/dropflase4"
        android:layout_alignTop="@+id/drag1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drag3"
        android:src="@drawable/dropflase4a"
        android:layout_alignTop="@+id/drag2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView18"
        android:src="@drawable/ans"
        android:layout_above="@+id/drop4" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView15"
        android:src="@drawable/picans04"
        android:background="@null"
        android:layout_above="@+id/imageView18"
        android:layout_toRightOf="@+id/drag1"
        android:layout_toEndOf="@+id/drag1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView16"
        android:src="@drawable/ansselect"
        android:layout_above="@+id/imageView18"
        android:layout_alignLeft="@+id/drag1"
        android:layout_alignStart="@+id/drag1"
        android:layout_marginBottom="97dp" />

</RelativeLayout>
